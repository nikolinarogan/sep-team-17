<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <conversionRule conversionWord="pciMask" class="com.ws.backend.tools.PciMaskingConverter" />
    <property name="LOG_PATH" value="./logs" />

    <appender name="AuditFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/psp-audit.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/audit.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} | %-5level | %logger{36} | %pciMask(%msg)%n</pattern>
        </encoder>
    </appender>

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %-5level - %pciMask(%msg)%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="AuditFile" />
        <appender-ref ref="Console" />
    </root>
</configuration>